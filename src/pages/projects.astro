const statusColors: Record<string, string> = {
  "完成": "bg-green-100 text-green-800",
  "開発中": "bg-yellow-100 text-yellow-800",
  "計画中": "bg-blue-100 text-blue-800"
};
---

<Layout title="プロジェクト一覧 - 山田太郎" description="山田太郎が開発した主要プロジェクトの詳細をご紹介します。React、Vue.js、Next.jsを使用したWebアプリケーション開発実績。">
  <Header />
  <main class="pt-16">
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
            プロジェクト一覧
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            これまでに開発・参加したプロジェクトをご紹介します。技術スタック、機能、工夫した点など詳細をご確認いただけます。
          </p>
        </div>

        <!-- Filter Options -->
        <div class="mb-12 flex flex-wrap justify-center gap-4">
          <button class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
            すべて
          </button>
          <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            React
          </button>
          <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Vue.js
          </button>
          <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            Node.js
          </button>
          <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
            TypeScript
          </button>
        </div>

        <!-- Projects Grid -->
        <div class="grid gap-8">
          {projects.map((project, index) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class={`${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} lg:flex`}>
                <div class="lg:w-2/5">
                  <img 
                    src={project.image} 
                    alt={project.title}
                    class="w-full h-64 lg:h-full object-cover"
                  />
                </div>
                <div class="p-8 lg:w-3/5">
                  <div class="flex items-start justify-between mb-4">
                    <h2 class="text-2xl font-bold text-gray-900">
                      {project.title}
                    </h2>
                    <span class={`px-3 py-1 rounded-full text-sm font-medium ${statusColors[project.status]}`}>
                      {project.status}
                    </span>
                  </div>
                  
                  <p class="text-gray-600 mb-4 leading-relaxed">
                    {project.longDescription}
                  </p>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">主な機能</h3>
                    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                      {project.features.map((feature) => (
                        <li class="flex items-center text-sm text-gray-600">
                          <svg class="w-4 h-4 mr-2 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                          {feature}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">技術スタック</h3>
                    <div class="flex flex-wrap gap-2">
                      {project.technologies.map((tech) => (
                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">技術的な挑戦</h3>
                    <p class="text-gray-600 text-sm">
                      {project.challenges}
                    </p>
                  </div>
                  
                  <div class="flex gap-4">
                    <a 
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      GitHub
                    </a>
                    <a 
                      href={project.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      ライブデモ
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA Section -->
        <div class="mt-16 text-center bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            新しいプロジェクトをお探しですか？
          </h2>
          <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
            これらの経験を活かして、新しいプロジェクトに参加することができます。
            お気軽にお問い合わせください。
          </p>
          <a 
            href="/contact" 
            class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            お問い合わせ
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout> 