---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const works = [
  {
    id: 1,
    title: "旅館予約サイト",
    description: "TypeScriptで開発中の旅館予約サイト。現在のインターン業務で個人開発中。",
    longDescription: "宿泊予約の利便性向上を目指し、TypeScriptでフロント・バックエンドを実装。ユーザーは旅館の検索・予約・管理が可能。UI/UXやパフォーマンスにも配慮し、実務での要件定義・設計・開発を一貫して担当。",
    image: "/project-ryokan.jpg",
    technologies: ["TypeScript"],
    github: "",
    demo: "https://weekly-ryokan-dev.vercel.app/",
    features: [
      "旅館検索・予約機能",
      "ユーザー管理",
      "レスポンシブデザイン"
    ],
    challenges: "要件定義から設計・実装・運用まで一貫して担当し、実務レベルの品質を求められた点。",
    status: "開発中"
  },
  {
    id: 2,
    title: "3次元骨格推定（研究）",
    description: "2台の単眼カメラと2次元骨格推定モデルを用いた3次元骨格推定。8ヶ月間個人で研究開発。",
    longDescription: "PythonとYOLOを活用し、2台のカメラ映像から2次元骨格推定を行い、3次元座標を再構成。AI・画像処理・三角測量など幅広い技術を実装。卒業研究として論文執筆・発表も経験。",
    image: "/project-research.jpg",
    technologies: ["Python", "YOLO"],
    github: "https://github.com/xxhidexx/graduate_research",
    demo: "",
    features: [
      "2次元骨格推定",
      "3次元座標再構成",
      "AI・画像処理"
    ],
    challenges: "カメラキャリブレーションやノイズ除去、精度向上のためのアルゴリズム調整。",
    status: "終了"
  },
  {
    id: 3,
    title: "アマチュア野球選手データ管理アプリ",
    description: "アマチュア野球選手のデータを管理するWebアプリケーション。Python(Flask)とSupabaseを使用し、個人開発中。",
    longDescription: "Excelで煩雑だった選手データ管理をWeb化。Python(Flask)とSupabaseでバックエンドを構築し、簡単な入力・検索・管理を実現。自分の趣味と実用性を両立したプロダクト。",
    image: "/project-baseball.jpg",
    technologies: ["Python", "Flask", "Supabase"],
    github: "",
    demo: "",
    features: [
      "選手データ登録・検索",
      "データベース管理",
      "シンプルなUI"
    ],
    challenges: "データ構造設計や、ユーザーが直感的に使えるUI設計。",
    status: "開発中"
  },
  {
    id: 4,
    title: "ゆーほー（有価証券報告書自動分析Webアプリ）",
    description: "JPHacksで開発。PDFの有価証券報告書をアップロードし、OCRで財務諸表の主要数値を自動抽出・計算。バックエンド担当。",
    longDescription: "4名チームで開発。Python(Django)とGoogle Cloud Vision APIを用い、PDFから財務データを自動抽出・計算・可視化。OCRやAPI連携、チーム開発・発表も経験。",
    image: "/project-yuho.jpg",
    technologies: ["Python", "Django", "Google Cloud Vision API"],
    github: "",
    demo: "",
    features: [
      "PDFアップロード・解析",
      "OCRによる自動データ抽出",
      "財務指標の自動計算・表示"
    ],
    challenges: "OCR精度の向上、PDFレイアウトの多様性対応、チームでの役割分担。",
    status: "終了"
  }
];

const statusColors: Record<string, string> = {
  "終了": "bg-green-100 text-green-800",
  "開発中": "bg-yellow-100 text-yellow-800",
  "計画中": "bg-blue-100 text-blue-800"
};
---

<Layout title="開発実績一覧 - 山田太郎" description="山田太郎が開発した主要開発実績の詳細をご紹介します。React、Next.jsを使用したWebアプリケーション開発実績。">
  <Header />
  <main class="pt-16">
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
            開発実績一覧
          </h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            これまでに開発・参加した開発実績をご紹介します。技術スタック、機能、工夫した点など詳細をご確認いただけます。
          </p>
        </div>

        <!-- Achievements Grid -->
        <div class="grid gap-8">
          {works.map((work, index) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class={`${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} lg:flex`}>
                <div class="p-8 lg:w-3/5">
                  <div class="flex items-start justify-between mb-4">
                    <h2 class="text-2xl font-bold text-gray-900">
                      {work.title}
                    </h2>
                    <span class={`px-3 py-1 rounded-full text-sm font-medium ${statusColors[work.status]}`}>
                      {work.status}
                    </span>
                  </div>
                  
                  <p class="text-gray-600 mb-4 leading-relaxed">
                    {work.longDescription}
                  </p>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">主な機能</h3>
                    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                      {work.features.map((feature) => (
                        <li class="flex items-center text-sm text-gray-600">
                          <svg class="w-4 h-4 mr-2 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                          {feature}
                        </li>
                      ))}
                    </ul>
                  </div>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">技術スタック</h3>
                    <div class="flex flex-wrap gap-2">
                      {work.technologies.map((tech) => (
                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">技術的な挑戦</h3>
                    <p class="text-gray-600 text-sm">
                      {work.challenges}
                    </p>
                  </div>
                  
                  <div class="flex gap-4">
                    <a 
                      href={work.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      GitHub
                    </a>
                    <a 
                      href={work.demo}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      ライブデモ
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA Section -->
        <div class="mt-16 text-center bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            新しい開発実績をお探しですか？
          </h2>
          <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
            これらの経験を活かして、新しい開発実績に参加することができます。
            お気軽にお問い合わせください。
          </p>
          <a 
            href="/contact" 
            class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            お問い合わせ
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout> 